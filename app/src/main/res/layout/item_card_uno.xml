<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btn_card"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@drawable/card_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="4dp"
        android:background="@drawable/background_tv_count_card_uno"
        android:minWidth="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_card"
        app:layout_constraintEnd_toEndOf="@+id/btn_card">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:minWidth="21dp"
            android:fontFamily="@font/nunito_bold"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>